<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/percentage"
        android:layout_width="@dimen/margin_27"
        android:layout_height="@dimen/margin_20"
        android:background="@mipmap/progress_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_3"
        android:text="0%"
        android:textColor="#FB4449"
        android:textSize="@dimen/text_size_12" />


    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dot"
        android:layout_marginTop="-2.5dp"
        android:max="100"
        android:progressDrawable="@drawable/progress_finace_dity" />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="@dimen/margin_4"
        android:layout_height="@dimen/margin_4"
        android:layout_below="@id/percentage"
        android:src="@drawable/shape_red_dot_2" />
</RelativeLayout>